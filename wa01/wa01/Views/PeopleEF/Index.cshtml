@model IEnumerable<Person>


<a asp-action="Create" asp-controller="PeopleEf">Insert New Person</a>
<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Age
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@item.Id</a>
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="PeopleEf" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="PeopleEf" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
